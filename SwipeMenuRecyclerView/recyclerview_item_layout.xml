<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/relay_message_press_selector"
    android:paddingLeft="14dp">

    <!-- 
    	android:background="@drawable/relay_message_press_selector" 
    	当没有按压效果时，可添加：
    	android:onClick="true"
     -->

    <LinearLayout
        android:id="@+id/message_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/relay_message_content_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:layout_weight="1"
                android:maxLines="2"
                android:textColor="#555555" />

            <ImageView
                android:id="@+id/relay_message_et_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:src="@drawable/relay_mesage_edit" />

        </LinearLayout>

        <TextView
            android:id="@+id/message_item_delete"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#FF5A5A"
            android:gravity="center"
            android:text="删 除"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>
